<Page x:Class="frp_control.pages.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:frp_control.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      Title="EditorPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="配置文件编辑" Margin="20,20,0,0" FontSize="20" FontWeight="Bold" Background="WhiteSmoke" Height="26" HorizontalAlignment="Left"/>
            <TabControl HorizontalAlignment="Left" VerticalAlignment="Top" Width="700" Height="540" Margin="0,15,0,0">
                <TabItem Header="Frpc（客户端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="500" VerticalAlignment="Top" Width="694" Background="White">
                            <TextBlock Height="26" TextWrapping="Wrap" Text="Frpc（客户端）" Width="146" Margin="50,20,0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <RichTextBox x:Name="FrpcTomlTextBox" Height="340" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="95" LastChildFill="False" Margin="0,0,0,0" Width="695" Background="White">
                                <Button x:Name="FrpcTomlLoadButton2" Content="重新读取（不保存）" Width="120" Height="50" Margin="50,0,0,0" Click="FrpcTomlLoadButton2_Click"/>
                                <Button x:Name="FrpcTomlSaveButton2" Content="保存" Width="80" Height="50" Margin="375,0,0,0" Click="FrpcTomlSaveButton2_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frps（服务端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Left" Height="500" Margin="0,0,0,0" VerticalAlignment="Top" Width="694" Background="White">
                            <TextBlock Height="26" TextWrapping="Wrap" Text="Frps（服务端）" Width="148" Margin="50,20,0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <RichTextBox x:Name="FrpsTomlTextBox" Height="340" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="95" LastChildFill="False" Margin="0,0,0,0" VerticalAlignment="Top" Width="695" Background="White">
                                <Button x:Name="FrpsTomlLoadButton2" Content="重新读取（不保存）" Width="120" Height="50" Margin="50,0,0,0" Click="FrpsTomlLoadButton2_Click"/>
                                <Button x:Name="FrpsTomlSaveButton2" Content="保存" Width="80" Height="50" Margin="375,0,0,0" Click="FrpsTomlSaveButton2_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frpc 32位 V0.51.3（客户端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="500" VerticalAlignment="Top" Width="694" Background="White">
                            <TextBlock Height="26" TextWrapping="Wrap" Text="Frpc 32位 V0.51.3（客户端）" Width="360" Margin="50,20,0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <RichTextBox x:Name="FrpcOldTomlTextBox" Height="340" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="95" LastChildFill="False" Margin="0,0,0,0" Width="695" Background="White">
                                <Button x:Name="FrpcOldTomlLoadButton2" Content="重新读取（不保存）" Width="120" Height="50" Margin="50,0,0,0" Click="FrpcOldTomlLoadButton2_Click"/>
                                <Button x:Name="FrpcOldTomlSaveButton2" Content="保存" Width="80" Height="50" Margin="375,0,0,0" Click="FrpcOldTomlSaveButton2_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frps 32位 V0.51.3（服务端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Left" Height="500" Margin="0,0,0,0" VerticalAlignment="Top" Width="694" Background="White">
                            <TextBlock Height="26" TextWrapping="Wrap" Text="Frps 32位 V0.51.3（服务端）" Width="360" Margin="50,20,0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <RichTextBox x:Name="FrpsOldTomlTextBox" Height="340" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="95" LastChildFill="False" Margin="0,0,0,0" VerticalAlignment="Top" Width="695" Background="White">
                                <Button x:Name="FrpsOldTomlLoadButton2" Content="重新读取（不保存）" Width="120" Height="50" Margin="50,0,0,0" Click="FrpsOldTomlLoadButton2_Click"/>
                                <Button x:Name="FrpsOldTomlSaveButton2" Content="保存" Width="80" Height="50" Margin="375,0,0,0" Click="FrpsOldTomlSaveButton2_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </StackPanel>



    </Grid>
</Page>
