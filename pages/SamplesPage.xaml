<Page x:Class="frp_control.pages.SamplesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:frp_control.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      Title="SamplesPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="配置参考" Margin="20,20,0,0" FontSize="20" FontWeight="Bold" Background="WhiteSmoke" Height="26" Width="80" HorizontalAlignment="Left"/>
            <TabControl HorizontalAlignment="Left" VerticalAlignment="Top" Width="700" Height="540" Margin="0,15,0,0">
                <TabItem Header="Frpc（客户端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="513" VerticalAlignment="Center" Width="694" Background="White">
                            <RichTextBox x:Name="FrpcSampleTextBox" Height="400" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="90" LastChildFill="False" Margin="0,0,0,0" Width="348" Background="White">
                                <Button x:Name="FrpcSampleLoadButton1" Content="重新读取" Width="100" Height="50" Margin="75,0,0,0" Click="FrpcSampleLoadButton1_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frps（服务端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="513" VerticalAlignment="Center" Width="694" Background="White">
                            <RichTextBox x:Name="FrpsSampleTextBox" Height="400" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="90" LastChildFill="False" Margin="0,0,0,0" Width="348" Background="White">
                                <Button x:Name="FrpsSampleLoadButton1" Content="重新读取" Width="100" Height="50" Margin="75,0,0,0" Click="FrpsSampleLoadButton1_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frpc 32位 V0.51.3（客户端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="513" VerticalAlignment="Center" Width="694" Background="White">
                            <RichTextBox x:Name="FrpcOldSampleTextBox" Height="400" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="90" LastChildFill="False" Margin="0,0,0,0" Width="348" Background="White">
                                <Button x:Name="FrpcOldSampleLoadButton1" Content="重新读取" Width="100" Height="50" Margin="75,0,0,0" Click="FrpcOldSampleLoadButton1_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Frps 32位 V0.51.3（服务端）">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center" Height="513" VerticalAlignment="Center" Width="694" Background="White">
                            <RichTextBox x:Name="FrpsOldSampleTextBox" Height="400" Width="640" Margin="0,20,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PageWidth="2048">
                                    <Paragraph>

                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DockPanel HorizontalAlignment="Left" Height="90" LastChildFill="False" Margin="0,0,0,0" Width="348" Background="White">
                                <Button x:Name="FrpsOldSampleLoadButton1" Content="重新读取" Width="100" Height="50" Margin="75,0,0,0" Click="FrpsOldSampleLoadButton1_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </StackPanel>

    </Grid>
</Page>
